<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.web.WebView?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="com.jareid.openaicli.javafxui.UserInterfaceScreenController">
    <top>
        <fx:include source="Toolbar.fxml"/>
    </top>
    <center>
        <ScrollPane>
            <content>
                <WebView fx:id="outputArea"/>
            </content>
        </ScrollPane>
    </center>
    <bottom>
        <HBox>
            <TextField fx:id="userInputField" HBox.hgrow="ALWAYS"/>
            <Button text="Send" onAction="#handleSendAction"/>
        </HBox>
    </bottom>
</BorderPane>